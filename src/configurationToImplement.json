[
  {
    "type": "textInput",
    "label": "Driver Name",
    "path": "driver.name",
    "defaultValue": "Peter Nolan",
    "required": true
  },
  {
    "type": "textInput",
    "label": "Vehicle Regplate",
    "path": "vehicle.regplate"
  },
  {
    "type": "enumInput",
    "label": "Vehicle Type",
    "path": "vehicle.type",
    "values": ["Car", "Van", "Motorbike"],
    "defaultValue": "Car"
  },
  {
    "type": "integerInput",
    "label": "Driver Age",
    "path": "driver.age",
    "min": 0,
    "max": 130,
    "defaultValue": 30
  },
  {
    "type": "currencyInput",
    "label": "Vehicle Trade Value",
    "path": "vehicle.tradeValue",
    "min": 0,
    "max": 1000000,
    "currencies": ["EUR", "USD", "GBP"]
  },
  {
    "type": "textInput",
    "label": "Insurance Provider",
    "path": "vehicle.insurance",
    "condition": {
      "path": "vehicle.type",
      "equals": "Car"
    }
  },
  {
    "type": "textInput",
    "label": "Medical Disclosure",
    "path": "driver.medical",
    "condition": {
      "path": "driver.age",
      "greaterThan": 70
    }
  },
  {
    "type": "textInput",
    "label": "Boot Size",
    "path": "vehicle.bootSize",
    "condition": {
      "path": "vehicle.type",
      "notEquals": "Motorbike"
    }
  },
  {
    "type": "textInput",
    "label": "Load Type",
    "path": "vehicle.loadType",
    "condition": {
      "path": "vehicle.type",
      "in": ["Van", "Truck"]
    }
  }
]
